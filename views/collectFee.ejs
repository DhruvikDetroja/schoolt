<%- include('./partials/header.ejs') %>

<div class="container  md:mx-20">
    <div class="row">
    <div class="col-sm-6 mt-5">
        <h2 class="alert alert-success text-center text-3xl font-semibold">Collect Fee</h2>
      
        <div class="mb-2">
        <section class="container">
            <label for="fees" class="form-label"><b>Name</b></label>
            <input type="text" name="fees" id="fees" class="form-control" value="<%=data.name %>" readonly />
        </section>
        </div>
        <div class="d-flex flex-row">
        <div class="mb-2">
          <section class="container">
              <label for="standard" class="form-label"><b>Class</b></label>
              <input type="text" name="standard" id="standard" class="form-control" value="<%=data.standard %>" readonly />
          </section>
          </div>
        <div class="mb-2">
          <section class="container">
              <label for="fees" class="form-label"><b>Registration No</b></label>
              <input type="text" name="fees" id="fees" class="form-control" value="<%=data.roll %>" readonly />
          </section>
          </div>
        </div>
        <form action="/student/collectFee/<%= data._id %>" method="post">
            <div class="mb-3 ms-1">
  
                  <div class="d-flex flex-row mb-3">

                    <div class="p-2">
                      <label for="standard" class="form-label"><b>Month</b></label>
                      <select class="form-select" aria-label="Default select example" name="month" id="month" >
                          <option value="January">January</option> 
                          <option value="February">February</option> 
                          <option value="March">March</option> 
                          <option value="April">April</option> 
                          <option value="May">May</option>
                          <option value="June">June</option>
                          <option value="July">July</option>
                          <option value="August">August</option>
                          <option value="September">September</option>
                          <option value="October">October</option>
                          <option value="November">November</option>
                          <option value="December">December</option>
                        </select>
                      </div>
                    <div class="p-2">
                      <label for="year" class="col-1 col-form-label"><b>Year</b> </label>
                      <div class="col-5">
                        <input type="number" min="2021" max="2025" step="1" value="2022" name="year" />
                      </div>
                    </div>
                  </div>
              
            </div>
            <div class="mb-3">
              <section class="container">
                <div class="row">
                  <div class="col-sm-5">
                    <label for="amount" class="form-label"><b>Amount</b></label>
                    <input type="text" name="amount" id="amount" class="form-control" required />
                  </div>
                </div>     
          </section>
          </div>
          <div class="mb-3">
            <section class="container">
              <div class="row">
                <div class="col-sm-5">
                  <label for="comment" class="form-label"><b>Comment(<span class="text-danger">Optional</span>)</b></label>
                  <input type="text" name="comment" id="comment" class="form-control" value=""/>
                </div>
              </div>
            
        </section>
        </div>
            <div class="d-flex flex-row mb-3">
                <div class="p-2">
                  <button type="submit" class="mx-1 border-blue-500 bg-blue-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-blue-600" >Save Fee</button>
                </div>                
           </form>

           <div class="p-2">
            <a href="/student"><div class=" border-gray-500 bg-gray-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-gray-600" >Back to Home</div></a>
            </div>
          </div>
        </div>
      
    </div>
</div>

<%- include('./partials/footer.ejs') %>