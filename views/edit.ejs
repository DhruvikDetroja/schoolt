<%- include('./partials/header.ejs') %>
<div class="container md:mx-20">
    <div class="row">
        <div class="col-sm-12 col-md-6 mt-5">
            <h2 class="alert alert-success text-center text-3xl font-semibold">Edit Student</h2>
        <form method="post" action="/student/update/<%= data._id%>">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= data.name %>" required />
            </div>
            <div class="mb-3">
                <label for="standard" class="form-label">Class</label>
                <select class="form-select" aria-label="Default select example" name="standard" id="standard">
                    <option value="1">Class 1</option> 
                    <option value="2">Class 2</option> 
                    <option value="3">Class 3</option> 
                    <option value="4">Class 4</option> 
                    <option value="5">Class 5</option>
                    <option value="6">Class 6</option>
                    <option value="7">Class 7</option>
                    <option value="8">Class 8</option>
                    <option value="9">Class 9</option>
                    <option value="10">Class 10</option>
                    <option value="11">Class 11</option>
                    <option value="12">Class 12</option>
                  </select>
                
            </div>
            <div class="mb-3">
                <label for="roll" class="form-label">Registration No</label>
                <input type="text" name="roll" id="roll" class="form-control" value="<%= data.roll %>" disabled />
            </div>
            <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input type="text" name="age" id="age" class="form-control" value="<%= data.age %>" required />
            </div>
            <div class="d-flex flex-row mb-3">
            <button type="submit" class="mx-2 border-blue-500 bg-blue-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-blue-600" >Update</button>
            </form>

        <a href="/student" class=""><div class="mx-2 border-gray-500 bg-gray-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-gray-600" >Back to Home</div></a>
        </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>