
<%- include('./partials/header.ejs') %>

<div class="container md:mx-20">
    <div class="row">
        <div class="col-sm-12 col-md-6 mt-5">
            <h2 class="alert alert-success text-center text-3xl font-semibold md:w-[33rem]">Paid Fee's</h2>
            <div class="smallscreen md:hidden">
              <% var i=1 %>
            <% data.forEach((item)=>{ %>
              <div class="max-w-sm rounded overflow-hidden shadow-lg mt-5">
                  <div class="px-6 py-4">
                    <p class="text-gray-700 text-base">
                     <span class="font-semibold mr-1 ml-4"> Amount:</span><%= item.amount %><div></div>
                     <span class="font-semibold mr-1 ml-4">Month:</span><%= item.feeMonth %><div></div>
                      <span class="font-semibold mr-1 ml-4">Year:</span><%= item.feeYear %><div></div>
                      <span class="font-semibold mr-1 ml-4">Fee Collector:</span><%= item.createdBy %><div></div>
                      <span class="font-semibold mr-1 ml-4">Comments:</span><%= item.comment %><div></div>
                  </p>
                  </div>
                  <div class="px-36 pt-2 pb-3">
                    <span class="inline-block bg-gray-200 rounded-full text-sm font-semibold text-gray-700 mr-2 mb-2">
                      <div class="p-1">
                        <!-- Edit Button-->
                        <form action="/student/editFeePage/<%=item._id%>" method="get" class="d-inline">
                        <button class="btn" type="submit"> <i class="fa-solid fa-pen"></i></button>
                        </form>
                      </div>
                  </span>
                  </div>
                </div>
                <% }) %>
              </div>
            <table class="table table-striped table-hover hidden md:block">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Month</th>
                    <th scope="col">Year</th>
                    <th scope="col">Fee Collector</th>
                    <th scope="col">Comments</th>
                    <th scope="col">Edit Fee</th>
                  </tr>
                </thead>
                <tbody>
                  <% var i=1 %>
                  <% data.forEach((item)=>{ %>
                    <tr>
                      <th scope="row"><%= i++  %></th>
                      <td><%= item.amount %></td>
                      <td><%= item.feeMonth %></td>
                      <td><%= item.feeYear %></td>
                      <td><%= item.createdBy %></td>
                      <td><%= item.comment %></td>
                      <td>
                        <div class="p-2">
                        <!-- Edit Button-->
                        <form action="/student/editFeePage/<%=item._id%>" method="get" class="d-inline">
                        <button class="btn" type="submit"> <i class="fa-solid fa-pen"></i></button>
                        </form>
                      </div>
                  </td>
                </tr>
                        <% }) %> 
                </tbody>
                </table>
              
              <div class="col-sm-4 hidden md:block">
                <div class="mt-md-5 mt-sm-3 mb-3">
                  <a href="/student">
                    <div class="mx-2 border-gray-500 bg-gray-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-gray-600 w-fit" >Back to Home</div>
                </a>
              </div>              
                  </div>
                </div>
                
              
              </div>
               
        
           
     
    </div>
</div>


<%- include('./partials/footer.ejs') %>