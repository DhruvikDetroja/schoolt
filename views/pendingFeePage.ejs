
<%- include('./partials/header.ejs') %>

<div class="container  md:mx-20">
    <div class="row">
        <div class="col-sm-12 col-md-6 mt-5">
            <h2 class="alert alert-danger text-center text-3xl font-semibold">Pending Fee</h2>

            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Month</th>
                    <th scope="col">Year</th>
                  </tr>
                </thead>
                <tbody>
                  <% var i=1 %>
                    <% month.forEach((e)=>{ %>
                    <tr>
                      <th scope="row"><%= i++  %></th>
                      <td><%= e %></td>
                      <td><%=year%></td>
                      </tr>

                        <% }) %>
                </tbody>
                </table>
                <div class="d-flex flex-row mb-3">
                  <span class="mt-3 ms-2">
                    <form action="/student/collectFee/<%=student%>" method="get">
                      <button type="submit" class="mx-2 border-blue-500 bg-blue-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-blue-600" >Collect Fee</button>
                  </form>
                  </span>
                  <span class="mt-3 ms-2">
                    <a href="/student" >
                      <div class=" border-gray-500 bg-gray-500 rounded-md py-2 px-3 text-white font-semibold hover:bg-gray-600" >Back to Home</div>
                  </a> 
                  </span>                 
              </div>
                </div>
                
                 
                  
               </div>
                </div>   
                </div>
                </div>
                
               


<%- include('./partials/footer.ejs') %>